<AnchorPane prefHeight="464.0" prefWidth="700.0" styleClass="root" stylesheets="@../CSS/Light-mode.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uet.libraryManagement.Controllers.AdminDocumentsController">
   <children>
       <!-- Search Bar -->
       <HBox alignment="CENTER" layoutX="14.0" layoutY="7.0" prefHeight="33.0" prefWidth="468.0" styleClass="Documents-HBox" stylesheets="@../CSS/Light-mode.css" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="218.80000000000007">
           <JFXButton contentDisplay="GRAPHIC_ONLY" focusTraversable="false" onAction="#handleSearchAction" styleClass="Documents-JFXButton" stylesheets="@../CSS/Light-mode.css">
               <graphic>
                   <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" styleClass="AdminDocuments-JFXButton-Add_document">
                       <image>
                           <Image url="@../ICONS/search.png" />
                       </image>
                   </ImageView>
               </graphic>
           </JFXButton>
           <TextField fx:id="searchBar" focusTraversable="false" prefHeight="25.0" prefWidth="184.0" promptText="Search documents...">
               <HBox.margin>
                   <Insets />
               </HBox.margin></TextField>
           <JFXButton contentDisplay="GRAPHIC_ONLY" focusTraversable="false" onAction="#clearSearchTerm" styleClass="Documents-JFXButton" stylesheets="@../CSS/Light-mode.css">
               <graphic>
                   <ImageView fitHeight="25.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true" styleClass="Documents-JFXButton">
                       <image>
                           <Image url="@../ICONS/clear.png" />
                       </image>
                   </ImageView>
               </graphic>
           </JFXButton>
           <JFXButton contentDisplay="RIGHT" focusTraversable="false" onAction="#toggleFilters" prefHeight="33.0" prefWidth="150.0" styleClass="Documents-JFXButton" stylesheets="@../CSS/Light-mode.css" text="Advanced Search">
               <graphic>
                   <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                       <image>
                           <Image url="@../ICONS/advanced_search.png" />
                       </image>
                   </ImageView>
               </graphic>
               <HBox.margin>
                   <Insets left="30.0" />
               </HBox.margin>
           </JFXButton>
       </HBox>

       <!-- Advanced Filters (Collapsible) -->
       <VBox fx:id="filtersPanel" layoutX="10" layoutY="50" spacing="10" visible="false">
           <Text text="Advanced Search Filters" />
           <HBox spacing="10">
               <Label focusTraversable="false" prefHeight="25.0" text="Title:" />
               <TextField fx:id="titleFilter" focusTraversable="false" promptText="Filter by title" />
           </HBox>
           <HBox spacing="10">
               <Label alignment="CENTER" focusTraversable="false" prefHeight="25.0" text="Author:" />
               <TextField fx:id="authorFilter" focusTraversable="false" promptText="Filter by author" />
           </HBox>
           <HBox prefHeight="25.0" prefWidth="445.0" spacing="10.0">
               <Label alignment="CENTER" focusTraversable="false" prefHeight="25.0" text="Category:" />
               <TextField fx:id="categoryFilter" focusTraversable="false" promptText="Filter by category" />
           </HBox>
           <HBox prefHeight="25.0" prefWidth="445.0" spacing="10.0">
               <Label alignment="CENTER" focusTraversable="false" prefHeight="25.0" text="Isbn 10:" />
               <TextField fx:id="isbn10Filter" focusTraversable="false" promptText="Filter by isbn10" />
           </HBox>
           <HBox prefHeight="25.0" prefWidth="445.0" spacing="10.0">
               <Label alignment="CENTER" focusTraversable="false" prefHeight="25.0" text="Isbn 13:" />
               <TextField fx:id="isbn13Filter" focusTraversable="false" promptText="Filter by isbn13" />
           </HBox>
           <HBox spacing="10">
               <Label alignment="CENTER" focusTraversable="false" prefHeight="25.0" text="Year:" />
               <DatePicker fx:id="startDateFilter" focusTraversable="false" promptText="Start Year" />
               <Text text="to" />
               <DatePicker fx:id="endDateFilter" focusTraversable="false" promptText="End Year" />
           </HBox>
           <HBox alignment="CENTER" spacing="20.0">
               <JFXButton focusTraversable="false" onAction="#applyFilters" prefWidth="115.0" styleClass="jfx-menu-button-style" stylesheets="@../CSS/Light-mode.css" text="Search">
                   <graphic>
                       <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                               <Image url="@../ICONS/search.png" />
                           </image>
                       </ImageView>
                   </graphic>
               </JFXButton>
               <JFXButton focusTraversable="false" onAction="#clearFilters" prefHeight="25.0" prefWidth="115.0" styleClass="jfx-menu-button-style" stylesheets="@../CSS/Light-mode.css" text="Clear filters">
                   <graphic>
                       <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                               <Image url="@../ICONS/clear_filters.png" />
                           </image>
                       </ImageView>
                   </graphic>
               </JFXButton>
           </HBox>
       </VBox>

      <TableView fx:id="docsTable" focusTraversable="false" layoutX="14.0" layoutY="55.0" prefHeight="364.0" prefWidth="670.0" styleClass="Documents-TableView" stylesheets="@../CSS/Light-mode.css">
        <columns>
          <TableColumn fx:id="idCol" prefWidth="40.0" text="ID" />
          <TableColumn fx:id="titleCol" prefWidth="145.0" text="Title" />
            <TableColumn fx:id="authorCol" prefWidth="140.0" text="Author" />
            <TableColumn fx:id="categoryCol" prefWidth="100.0" text="Genre" />
            <TableColumn fx:id="publisherCol" prefWidth="146.0" text="Publisher" />
            <TableColumn fx:id="dateCol" prefWidth="108.0" text="Published Date" />
            <TableColumn fx:id="isbn10Col" prefWidth="75.0" text="Isbn 10" />
            <TableColumn fx:id="isbn13Col" prefWidth="75.0" text="Isbn13" />
            <TableColumn fx:id="quantityCol" text="Quantity" />
        </columns>
      </TableView>
      <ComboBox fx:id="docTypeBox" focusTraversable="false" layoutX="596.0" layoutY="14.0" prefHeight="25.0" prefWidth="90.0" />
      <JFXButton focusTraversable="false" layoutX="280.0" layoutY="422.0" onAction="#deleteDoc" styleClass="Documents-JFXButton" stylesheets="@../CSS/Light-mode.css" text="Delete document">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../ICONS/deleteDoc.png" />
               </image>
            </ImageView>
         </graphic>
      </JFXButton>
      <JFXButton focusTraversable="false" layoutX="482.0" layoutY="422.0" onAction="#editDoc" styleClass="Documents-JFXButton" stylesheets="@../CSS/Light-mode.css" text="Edit document">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../ICONS/editDoc.png" />
               </image>
            </ImageView>
         </graphic>
      </JFXButton>
      <JFXButton focusTraversable="false" layoutX="88.0" layoutY="422.0" onAction="#addDoc" styleClass="Documents-JFXButton" stylesheets="@../CSS/Light-mode.css" text="Add document">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../ICONS/addDoc.png" />
               </image>
            </ImageView>
         </graphic>
      </JFXButton>
   </children>
</AnchorPane>
