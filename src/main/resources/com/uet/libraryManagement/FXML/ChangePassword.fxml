      <graphic>
         <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../ICONS/save.png" />
            </image>
         </ImageView>
      </graphic>
   </JFXButton>
   <Label fx:id="messageLabel" alignment="CENTER" layoutX="41.0" layoutY="251.0" prefHeight="26.0" prefWidth="159.0">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Label>

</AnchorPane>
