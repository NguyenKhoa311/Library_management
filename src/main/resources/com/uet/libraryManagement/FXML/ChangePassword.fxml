<AnchorPane prefHeight="300.0" prefWidth="414.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uet.libraryManagement.Controllers.ChangePasswordController">
   <Label alignment="CENTER" layoutX="115.0" layoutY="32.0" prefHeight="49.0" prefWidth="207.0" text="Change Password">
      <graphic>
         <ImageView fitHeight="34.0" fitWidth="39.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../ICONS/changePassword.png" />
            </image></ImageView>
      </graphic>
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
   </Label>
    <VBox alignment="CENTER_LEFT" layoutX="65.0" layoutY="96.0" prefHeight="143.0" prefWidth="303.0" spacing="8.0" style="-fx-spacing: 10px;" styleClass="Document-vbox">
      <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-alignment: center-left; -fx-spacing: 2px;">
         <children>
              <Label contentDisplay="RIGHT" prefHeight="40.0" prefWidth="303.0" style="" text="Current password:" wrapText="true">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
              </Label>
                <TextField fx:id="currentPassField" focusTraversable="false" maxWidth="582.0" prefHeight="26.0" prefWidth="582.0" promptText="Current password" style="-fx-max-width: 360;" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-alignment: center-left; -fx-spacing: 2px;">
         <children>
              <Label contentDisplay="RIGHT" prefHeight="40.0" prefWidth="285.0" style="-fx-font-weight: bold;" text="New password:" wrapText="true">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
              </Label>
                <TextField fx:id="newPassField" focusTraversable="false" maxWidth="467.0" prefHeight="26.0" prefWidth="467.0" promptText="New password" style="-fx-max-width: 340;" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-alignment: center-left; -fx-spacing: 2px;">
         <children>
              <Label contentDisplay="RIGHT" focusTraversable="false" prefHeight="40.0" prefWidth="146.0" style="-fx-font-weight: bold;" text="Confirm password:" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font>
              </Label>
                <TextField fx:id="confirmPassField" focusTraversable="false" maxWidth="463.0" prefHeight="26.0" prefWidth="463.0" promptText="Confirm password" style="-fx-max-width: 200;" />
         </children>
      </HBox>
      <cursor>
         <Cursor fx:constant="W_RESIZE" />
      </cursor>
    </VBox>
