<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uet.libraryManagement.Controllers.AdminDashboardController">
   <children>
      <VBox prefHeight="464.0" prefWidth="700.0" spacing="10" stylesheets="@../CSS/Light-mode.css">
      
         <!-- Header -->
         <HBox prefHeight="50.0" styleClass="header">
            <padding>
               <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <Label styleClass="header-title" text="UET Library Management System" />
         </HBox>

         <!-- Stat Cards Section -->
         <HBox alignment="CENTER" prefHeight="120.0" spacing="15" styleClass="stat-container">
            <!-- All Books Card -->
            <VBox prefWidth="120" styleClass="stat-card">
               <StackPane styleClass="circle-container">
                  <Circle radius="30" styleClass="stat-circle, stat-circle-bg" />
                  <Circle fx:id="allBooksCircle" radius="30" styleClass="stat-circle" />
               </StackPane>
               <Label fx:id="allDocsCount" styleClass="stat-number" text="85" />
               <Label styleClass="stat-label" text="All Documents" />
            </VBox>

            <!-- Remaining Books Card -->
            <VBox prefWidth="120" styleClass="stat-card">
               <StackPane styleClass="circle-container">
                  <Circle radius="30" styleClass="stat-circle, stat-circle-bg" />
                  <Circle fx:id="remainingBooksCircle" radius="30" styleClass="stat-circle" />
               </StackPane>
               <Label fx:id="remainingDocsCount" styleClass="stat-number" text="80" />
               <Label alignment="CENTER" prefWidth="106.0" styleClass="stat-label" text="Remaining Docs" />
            </VBox>

            <!-- Issued Books Card -->
            <VBox prefWidth="120" styleClass="stat-card">
               <StackPane styleClass="circle-container">
                  <Circle radius="30" styleClass="stat-circle, stat-circle-bg" />
                  <Circle fx:id="issuedBooksCircle" radius="30" styleClass="stat-circle" />
               </StackPane>
               <Label fx:id="issuedDocsCount" styleClass="stat-number" text="5" />
               <Label styleClass="stat-label" text="Issued Docs" />
            </VBox>

            <!-- All Students Card -->
            <VBox prefWidth="120" styleClass="stat-card">
               <StackPane styleClass="circle-container">
                  <Circle radius="30" styleClass="stat-circle, stat-circle-bg" />
                  <Circle fx:id="allStudentsCircle" radius="30" styleClass="stat-circle" />
               </StackPane>
               <Label fx:id="allUsersCount" styleClass="stat-number" text="9" />
               <Label styleClass="stat-label" text="All Users" />
            </VBox>

            <!-- Students Holding Books Card -->
            <VBox prefWidth="120" styleClass="stat-card">
               <StackPane styleClass="circle-container">
                  <Circle radius="30" styleClass="stat-circle, stat-circle-bg" />
                  <Circle fx:id="holdingBooksCircle" radius="30" styleClass="stat-circle" />
               </StackPane>
               <Label fx:id="holdingDocsCount" styleClass="stat-number" text="2" />
               <Label styleClass="stat-label" text="Users Issuing" />
            </VBox>
         </HBox>
      
         <!-- Chart Section -->
         <VBox styleClass="chart-section" VBox.vgrow="ALWAYS">
            <padding>
               <Insets bottom="10" left="15" right="15" top="10" />
            </padding>
            <Label styleClass="section-title" text="Documents and Users Information" />
            <BarChart fx:id="statisticsChart" legendVisible="true" prefHeight="250.0">
               <xAxis>
                  <CategoryAxis />
               </xAxis>
               <yAxis>
                  <NumberAxis label="Count" tickUnit="20" />
               </yAxis>
            </BarChart>
         </VBox>
      </VBox>
   </children>
</AnchorPane>
